<% if @model == 'book' %>
<!--books一覧 -->
	<h2>Books search for <%= @content %></h2>
	<table class="table table-hover table-inverse">
		<thead>
			<tr>
				<th></th>
				<th>Title</th>
				<th>Opinion</th>
				<th colspan="3"></th>
			</tr>
		</thead>

		<tbody>
			<% @datas.each do |data| %>

			<tr>
				<td>
					<%= link_to user_path(data.user) do %>
						<%= attachment_image_tag(data.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
					<% end %>
				</td>
				<td><%= link_to data.title, book_path(data), class: "data_#{data.id}" %></td>
				<td><%= data.body %></td>
				
			</tr>
			<% end %>
		</tbody>
	</table>
<% elsif @model == 'user' %>
<!-- Users一覧 -->
    <h2>Users search for <%= @content %></h2>
		<table class="table">
			<thead>
				<tr>
					<th>image</th>
					<th>name</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @datas.each do |data| %>
				<tr>
					<td><%= attachment_image_tag(data, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
					<td><%= data.name %></td>
					<td><%= link_to "Show", user_path(data), class: "data_#{data.id}" %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
<% end %>
